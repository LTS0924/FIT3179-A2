{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "transparent",
  "width": "container",
  "height": "container",
  "projection": {
    "type": "mercator",
    "center": [109.45, 4],
    "scale": 2500,
    "translate": [440, 225]
  },
  "padding": { "top": 6, "bottom": 6, "left": 6, "right": 6 },
  "params": [
    {
      "name": "year_selection",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "hover_name",
      "value": "",
      "on": [
        { "events": "mouseover", "update": "datum && datum.State ? datum.State : ''" },
        { "events": "mouseout",  "update": "''" }
      ]
    }
  ],

  "layer": [
  { "data": { "sphere": true }, "mark": { "type": "geoshape", "fill": "transparent" } },

    {
      "data": { "graticule": { "step": [5, 5] } },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#cfdfe8",
        "strokeWidth": 1.5,
        "opacity": 1.0
      }
    },

    {
      "data": { "graticule": { "step": [30, 10] } },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#bfcfd8",
        "strokeWidth": 1.2,
        "opacity": 1.0
      }
    },

    {
      "data": {
        "values": {
          "type": "FeatureCollection",
          "features": [
            {
              "type": "Feature",
              "geometry": {
                "type": "LineString",
                "coordinates": [[99.5, -5], [99.5, 20]]
              }
            }
          ]
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#4fb0e0",
        "strokeWidth": 1,
        "opacity": 0.95
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/LTS0924/FIT3179-A2/refs/heads/main/Arrival_State.csv",
        "format": { "type": "csv" }
      },
      "transform": [
        {
          "calculate": "toNumber(datum.Year)",
          "as": "YearNum"
        },
        {
          "filter": "datum.YearNum == year_selection"
        },
        {
          "calculate": "toNumber(datum.Value)",
          "as": "ValueNum"
        },
        {
          "calculate": "toNumber(datum.Percentage)",
          "as": "PercentageNum"
        },
        {
          "calculate": "datum.PercentageNum <= 4 ? '0–4%' : datum.PercentageNum <= 8 ? '4–8%' : datum.PercentageNum <= 12 ? '8–12%' : datum.PercentageNum <= 16 ? '12–16%' : 'Unused'",
          "as": "PercentageBin"
        },
        {
          "lookup": "State",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/LTS0924/FIT3179/refs/heads/main/Malaysia.topojson",
              "format": { "type": "topojson", "feature": "my" }
            },
            "key": "properties.name"
          },
          "as": "geo"
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 1 },
      "encoding": {
        "shape": { "field": "geo", "type": "geojson" },
        "color": {
          "field": "PercentageBin",
          "type": "nominal",
          "scale": {
            "domain": ["0–4%", "4–8%", "8–12%", "12–16%", " 17-100% Unused"],
            "range": ["#deebf7", "#9ecae1", "#3182bd", "#08519c", "#ffffff"]
          },
          "legend": {
            "title": "Percentage of Total Arrivals (%)",
            "orient": "right",
            "offset": 8
          }
        },
        "opacity": { "value": 1 },
        "tooltip": [
          { "field": "State", "type": "nominal", "title": "State" },
          { "field": "YearNum", "type": "quantitative", "title": "Year" },
          { "field": "ValueNum", "type": "quantitative", "title": "Arrivals (thousands)", "format": ",.0f" },
          { "field": "PercentageNum", "type": "quantitative", "title": "Percentage of Total (%)", "format": ".2f" }
        ],
        "stroke": {
          "condition": {
            "test": "hover_name !== '' && datum.State === hover_name",
            "value": "#333333"
          },
          "value": "white"
        },
        "strokeWidth": {
          "condition": {
            "test": "hover_name !== '' && datum.State === hover_name",
            "value": 3
          },
          "value": 1
        }
      }
    }
  ],

  "resolve": { "legend": { "color": "independent" } }
  ,
  "config": {
    "view": { "stroke": null, "fill": "transparent" }
  }
}
