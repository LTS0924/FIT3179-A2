{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "transparent",
  "width": "container",
  "height": 450,
  "autosize": { "type": "fit", "contains": "padding" },
  "projection": {
    "type": "mercator",
    "center": [109.45, 4],
    "scale": 2750
  },

  "params": [
    {
      "name": "year_selection",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "hover_name",
      "value": "",
      "on": [
        { "events": "mouseover", "update": "datum && datum.State ? datum.State : ''" },
        { "events": "mouseout",  "update": "''" }
      ]
    }
  ],

  "layer": [
  { "data": { "sphere": true }, "mark": { "type": "geoshape", "fill": "transparent" } },

    {
      "data": { "graticule": { "step": [5, 5] } },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#e9eef2",
        "strokeWidth": 1,
        "opacity": 0.9
      }
    },

    {
      "data": { "graticule": { "step": [30, 10] } },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#d6dbe0",
        "strokeWidth": 1.0,
        "opacity": 1.0
      }
    },

    {
      "data": {
        "values": {
          "type": "FeatureCollection",
          "features": [
            {
              "type": "Feature",
              "geometry": {
                "type": "LineString",
                "coordinates": [[99.5, -5], [99.5, 20]]
              }
            }
          ]
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#4fb0e0",
        "strokeWidth": 1,
        "opacity": 0.95
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/LTS0924/FIT3179-A2/refs/heads/main/Arrival_State.csv",
        "format": { "type": "csv" }
      },
      "transform": [
        {
          "calculate": "toNumber(datum.Year)",
          "as": "YearNum"
        },
        {
          "filter": "datum.YearNum == year_selection"
        },
        {
          "calculate": "toNumber(datum.Value)",
          "as": "ValueNum"
        },
        {
          "calculate": "toNumber(datum.Percentage)",
          "as": "PercentageNum"
        },
        {
          "lookup": "State",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/LTS0924/FIT3179/refs/heads/main/Malaysia.topojson",
              "format": { "type": "topojson", "feature": "my" }
            },
            "key": "properties.name"
          },
          "as": "geo"
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 1 },
      "encoding": {
        "shape": { "field": "geo", "type": "geojson" },
        "color": {
          "condition": {
            "test": "datum.PercentageNum == null || isNaN(datum.PercentageNum)",
            "value": "#efefef"
          },
          "field": "PercentageNum",
          "type": "quantitative",
          "scale": { "domain": [0, 16], "scheme": "blues" },
          "legend": { "title": "Percentage of Total Arrivals (%)", "orient": "right" }
        },
        "opacity": { "value": 1 },
        "tooltip": [
          { "field": "State", "type": "nominal", "title": "State" },
          { "field": "YearNum", "type": "quantitative", "title": "Year" },
          { "field": "ValueNum", "type": "quantitative", "title": "Arrivals (thousands)", "format": ",.0f" },
          { "field": "PercentageNum", "type": "quantitative", "title": "Percentage of Total (%)", "format": ".2f" }
        ],
        "stroke": {
          "condition": {
            "test": "hover_name !== '' && datum.State === hover_name",
            "value": "#333333"
          },
          "value": "white"
        },
        "strokeWidth": {
          "condition": {
            "test": "hover_name !== '' && datum.State === hover_name",
            "value": 3
          },
          "value": 1
        }
      }
    },
  {
      "data": { "values": [{ "range": "31-100" }] },
      "mark": { "type": "point", "opacity": 0 },
      "encoding": {
        "color": {
          "field": "range",
          "type": "nominal",
          "scale": { "domain": ["16-100"], "range": ["#ffffff"] },
          "legend": { "title": "16-100 (unused)", "orient": "right" }
        }
      }
    }
  ],

  "resolve": { "legend": { "color": "independent" } }
  ,
  "config": {
    "view": { "stroke": null, "fill": "transparent" }
  }
}
