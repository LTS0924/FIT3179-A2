{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "transparent",
  "width": "container",
  "height": 300,
  "autosize": { "type": "fit", "contains": "padding" },
  "data": {
    "url": "https://raw.githubusercontent.com/LTS0924/FIT3179-A2/refs/heads/main/Employment_international.csv",
    "format": { "type": "csv" }
  },
  "transform": [
    {
      "fold": ["2015", "2016", "2017", "2018", "2019", "2020", "2021", "2022", "2023", "2024"],
      "as": ["Year", "Employment"]
    },
    {
      "calculate": "toNumber(datum.Year)",
      "as": "YearNum"
    },
    {
      "calculate": "toNumber(datum.Employment)",
      "as": "EmploymentNum"
    },
    {
      "filter": "datum.Industry != 'Total'"
    }
  ],
  "mark": {
    "type": "area",
    "line": true,
    "point": false
  },
  "encoding": {
    "x": {
      "field": "YearNum",
      "type": "quantitative",
      "title": "Year",
      "axis": {
        "format": "d",
        "tickCount": 10,
        "grid": false
      }
    },
    "y": {
      "field": "EmploymentNum",
      "type": "quantitative",
      "title": "Employment (thousands)",
      "axis": {
        "format": ",.0f",
        "grid": true,
        "gridOpacity": 0.3
      },
      "stack": "zero"
    },
    "color": {
      "field": "Industry",
      "type": "nominal",
      "title": "Industry Sector",
      "scale": {
        "domain": [
          "Accommodation services",
          "Country-specific tourism characteristic services",
          "Cultural, sports and recreational services",
          "Food and beverage serving services",
          "Passenger transport services",
          "Retail sale of automotive fuel",
          "Retail trade",
          "Travel agencies and other reservation services"
        ],
        "range": [
          "#1f77b4",
          "#9467bd",
          "#ff7f0e",
          "#d62728",
          "#8c564b",
          "#e377c2",
          "#7f7f7f",
          "#bcbd22"
        ]
      },
      "legend": {
        "orient": "right",
        "titleLimit": 200,
        "labelLimit": 250
      }
    },
    "tooltip": [
      { "field": "Industry", "type": "nominal", "title": "Industry" },
      { "field": "YearNum", "type": "quantitative", "title": "Year", "format": "d" },
      { "field": "EmploymentNum", "type": "quantitative", "title": "Employment (thousands)", "format": ",.1f" }
    ],
    "opacity": {
      "value": 0.8
    }
  },
  "config": {
    "area": {
      "interpolate": "monotone"
    },
    "view": {
      "stroke": null,
      "fill": "transparent"
    }
  }
}
