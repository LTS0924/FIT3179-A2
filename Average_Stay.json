{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "transparent",
  "description": "Lollipop chart showing average length of stay by country in 2017",
  "width": "container",
  "height": 800,
  "autosize": { "type": "fit", "contains": "padding" },
  "data": {
    "url": "https://raw.githubusercontent.com/LTS0924/FIT3179-A2/refs/heads/main/Average_Stay.csv"
  },
  "transform": [
    {
      "calculate": "toNumber(datum['2017'])",
      "as": "Stay_2017"
    },
    {
      "calculate": "datum.Year == 'Others ASEAN' ? 'Others ASEAN' : 'Other'",
      "as": "Country_Type"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "rule",
        "strokeWidth": 2,
        "opacity": 0.7
      },
      "encoding": {
        "x": {
          "field": "Stay_2017",
          "type": "quantitative",
          "scale": {"domain": [0, 12]},
          "title": "Average Length of Stay (nights)"
        },
        "y": {
          "field": "Year",
          "type": "nominal",
          "sort": {
            "field": "Stay_2017",
            "order": "descending"
          },
          "title": "Country of Nationality"
        },
        "x2": {"value": 0},
        "color": {
          "field": "Country_Type",
          "type": "nominal",
          "scale": {
            "domain": ["Others ASEAN", "Other"],
            "range": ["#0072B2", "#999999"]
          },
          "legend": null
        }
      }
    },
    {
      "mark": {
        "type": "circle",
        "size": 100,
        "opacity": 0.9
      },
      "encoding": {
        "x": {
          "field": "Stay_2017",
          "type": "quantitative"
        },
        "y": {
          "field": "Year",
          "type": "nominal",
          "sort": {
            "field": "Stay_2017",
            "order": "descending"
          }
        },
        "color": {
          "field": "Country_Type",
          "type": "nominal",
          "scale": {
            "domain": ["Others ASEAN", "Other"],
            "range": ["#0072B2", "#999999"]
          },
          "legend": {
            "title": "Country Type",
            "orient": "right",
            "offset": 120
          }
        },
        "tooltip": [
          {"field": "Year", "type": "nominal", "title": "Country"},
          {"field": "Stay_2017", "type": "quantitative", "title": "Average Stay (nights)", "format": ".1f"}
        ]
      }
    }
  ]
,
  "config": {
    "view": { "fill": "transparent" }
  }
}
