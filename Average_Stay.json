{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Lollipop chart showing average length of stay by country in 2017, with Malaysia highlighted",
  "width": 600,
  "height": 800,
  "data": {
    "url": "https://raw.githubusercontent.com/LTS0924/FIT3179-A2/refs/heads/main/Average_Stay.csv"
  },
  "transform": [
    {
      "fold": ["2015", "2016", "2017"],
      "as": ["Year", "Average_Stay"]
    },
    {
      "filter": "datum.Year == '2017'"
    },
    {
      "calculate": "toNumber(datum.Average_Stay)",
      "as": "Stay_Numeric"
    },
    {
      "calculate": "datum.Year == 'Malaysia' ? 'Malaysia' : 'Other'",
      "as": "Country_Type"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "rule",
        "strokeWidth": 2,
        "opacity": 0.7
      },
      "encoding": {
        "x": {
          "field": "Stay_Numeric",
          "type": "quantitative",
          "scale": {"domain": [0, 12]},
          "title": "Average Length of Stay (nights)"
        },
        "y": {
          "field": "Year",
          "type": "nominal",
          "sort": {
            "field": "Stay_Numeric",
            "order": "descending"
          },
          "title": "Country of Nationality"
        },
        "x2": {"value": 0},
        "color": {
          "field": "Country_Type",
          "type": "nominal",
          "scale": {
            "domain": ["Malaysia", "Other"],
            "range": ["#0072B2", "#999999"]
          },
          "legend": null
        }
      }
    },
    {
      "mark": {
        "type": "circle",
        "size": 100,
        "opacity": 0.9
      },
      "encoding": {
        "x": {
          "field": "Stay_Numeric",
          "type": "quantitative"
        },
        "y": {
          "field": "Year",
          "type": "nominal",
          "sort": {
            "field": "Stay_Numeric",
            "order": "descending"
          }
        },
        "color": {
          "field": "Country_Type",
          "type": "nominal",
          "scale": {
            "domain": ["Malaysia", "Other"],
            "range": ["#0072B2", "#999999"]
          },
          "legend": {
            "title": "Country Type",
            "orient": "top-right"
          }
        },
        "tooltip": [
          {"field": "Year", "type": "nominal", "title": "Country"},
          {"field": "Stay_Numeric", "type": "quantitative", "title": "Average Stay (nights)", "format": ".1f"}
        ]
      }
    }
  ]
}
